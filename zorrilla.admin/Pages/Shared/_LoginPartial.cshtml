@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager

@if (SignInManager.IsSignedIn(User))
{
    <form asp-area="Identity" asp-page="/Account/Logout" method="post" id="logoutForm" class="nav-item nav-link">
        <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Hello, @UserManager.GetUserName(User)!</a>
        <button type="submit" class="btn btn-link nav-item nav-link text-dark">Logout</button>
    </form>
}
else
{
    <a class="nav-item nav-link text-dark" asp-area="Identity" asp-page="/Account/Login">Login</a>
}