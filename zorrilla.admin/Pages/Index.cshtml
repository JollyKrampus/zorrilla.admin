@page
@model IndexModel
@{
    ViewData["Title"] = "Pagina principal";
}

<button type="button" class="btn btn-primary" data-toggle="modal" data-target="#addClientModal">
    Agregar Cliente
</button>

<div class="modal fade" id="addClientModal" tabindex="-1" role="dialog" aria-labelledby="addClientModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="addClientModalLabel">Agregar nuevo cliente</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Cerrar">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <form method="post">
                <div class="modal-body">
                    <div class="form-group">
                        <label for="name">Nombre</label>
                        <input type="text" class="form-control" id="name" asp-for="NewClient.Name" required />
                    </div>
                    <div class="form-group">
                        <label for="description">Notas</label>
                        <input type="text" class="form-control" id="description" asp-for="NewClient.Description" />
                    </div>
                    <div class="form-group">
                        <label for="address">Domicilio</label>
                        <input type="text" class="form-control" id="address" asp-for="NewClient.Address" required />
                    </div>
                    <div class="form-group">
                        <label for="phone">Telefono</label>
                        <input type="text" class="form-control" id="phone" asp-for="NewClient.Phone" required />
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Cerrar</button>
                    <button type="submit" class="btn btn-primary">Agregar nuevo cliente</button>
                </div>
            </form>
        </div>
    </div>
</div>

<table class="table table-striped">
    <thead>
    <tr>
        <th>Nombre</th>
        <th>Notas</th>
        <th>Domicilio</th>
        <th>Telefono</th>
    </tr>
    </thead>
    <tbody>
    @foreach (var client in Model.Clients)
    {
        <tr>
            <td>@client.Name</td>
            <td>@client.Description</td>
            <td>@client.Address</td>
            <td>@client.Phone</td>
        </tr>
    }
    </tbody>
</table>