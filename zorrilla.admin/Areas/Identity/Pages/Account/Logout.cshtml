@page
@model LogoutModel
@{
    ViewData["Title"] = "Terminar sesion";
}

<header>
    <h1>@ViewData["Title"]</h1>
    @{
        if (User.Identity.IsAuthenticated)
        {
            <form class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Page("/", new { area = "" })" method="post">
                <button type="submit" class="nav-link btn btn-link text-dark">Haz clic aqui para terminar sesion</button>
            </form>
        }
        else
        {
            <p>Has salido de la aplicacion.</p>
        }
    }
</header>